{% extends 'base.html.twig' %}
{% block body %}
<div class="row">
	<div class="col-md-6 col-md-offset-3 ">
		<div class="panel">
			<div class="p-30">
				<div class="row text-center">
					<div class="img-show" style="background: url('{{asset ('img/allImg/'~caja.image)}}');"></div>
						<h3 class="m-b-0 text-center">{{caja.codigo|default('ninguno')}}</h3>
						<h5 class="m-t-0 text-center">{{caja.nombre}}</h5>
						{#
						<a href="javascript:void(0)" class="btn btn-rounded btn-success"><i class="ti-plus m-r-5"></i> FOLLOW</a>
							#}
					</div>
					<div class="row text-center m-t-30">
						<div class="col-xs-4 b-r">
							<h2>{{responsables|length}}</h2>
							<h6>RESPONSABLES</h6>
						</div>
						<div class="col-xs-4 b-r">
							<h2>{{noResponsables|length}}</h2>
							<h6>NO RESPONSABLES</h6></div>
							<div class="col-xs-4">
								<h2>{{caja.saldo}}</h2>
								<h6>SALDO</h6>
							</div>
						</div>
					</div>
					<hr class="m-t-10" />
					<div class="p-20 text-left">
						<p class="">Direccion : {{caja.direccion}}</p>
						<p class="">Orden : {{caja.orden}}</p>
						<p class="">Codigo Postal : {{caja.cp}}</p>
						<p class="">Codigo Empresarial : {{caja.ce}}</p>
						<p class="">Descripcion : {{caja.descripcion|default('ninguna')}}</p>
						<hr>
					</div>
				</div>
			</div>
		</div>
		{% endblock %}