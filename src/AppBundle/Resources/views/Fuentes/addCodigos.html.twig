{% extends 'base.html.twig' %}
{% block css %}
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/css/select2.css" rel="stylesheet" type="text/css" />
{% endblock %}
{% block body %}
<div class="row">
	<div class="col-md-12">
		<div class="panel">
			<div class="panel-body">
				<form method="post" >
					<div class="row ">
						<div class="col-md-1 text-right">
							<label class="m-r-5" for="">Codigo</label>
						</div>
						<div class="col-md-4">
							<select required  name="codigo" id="Codigos">
								<option ></option>
								{% for codigo in codigos %}
								<option value="{{codigo.id}}">{{codigo.nro}} {{codigo.iniciales}}</option>
								{% endfor %}
							</select><br>
						</div>
						<div class="col-md-1">
							<button class="btn btn-success">Agregar</button>
						</div>
					</div>
				</form>
			</div>
		</div>
		<div class="white-box">
			<div class="box-title">Codigos de {{fuente.nombre}}</div>
			<div class="table-responsive">
				<table id="responsables" class="table table-striped text-center">
					<thead >
						<tr >
							<th class="text-center">Id</th>
							<th class="text-center">Numero</th>
							<th class="text-center">Descripcion</th>
							<th class="text-center">Iniciales</th>
							<th class="text-center">Acciones</th>
						</tr>
					</thead>
					<tbody>
						{% for codigofuente in codigosFuente %}
						<tr>
							<td>{{codigofuente.id}}</td>
							<td>{{codigofuente.codigo.nro}}</td>
							<td>{{codigofuente.codigo.descripcion}}</td>
							<td>{{codigofuente.codigo.iniciales}}</td>
							<td>
								<a  href="{{ path ('del_codigos',{'id':codigofuente.id})}}" class="btn btn-sm btn-danger m-r-5"><i class="fa fa-remove"></i></a>
							</td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/js/select2.js" type="text/javascript"></script>

<script>
$('#Codigos').select2({
	placeholder: "Seleccione un codigo",
	allowClear: true
});
;
</script>
{% endblock %}