{% extends "::base.html.twig" %}

{% block css %}
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/css/select2.css" rel="stylesheet" type="text/css" />
{% endblock %}
{% block body %}
<div class="row">
	<div class="col-md-12">
		<div class="white-box">
			<div class="box-title">Editar Usuario</div>
			<div id="pwMessage" style="display:none;"><p  class="text-danger">Contrase√±as debe coincidir</p></div>
			<form method="post" id="userForm">
				<div class="row">
					<div class="col-md-6">
						<label for="">Nombre</label>
						<input required class="form-control m-b-5" value="{{user.name}}" name="nombre" type="text">
						<label for="">Apellido</label>
						<input required class="form-control m-b-5" value="{{user.lastName}}" name="apellido" type="text">
						<label for="">Nombre de sede</label>
						<input required class="form-control m-b-5" value="{{user.nombreSede}}" name="nombreSede" type="text">
						<label for="">Pais de sede</label>
						<input required class="form-control m-b-5" value="{{user.ciudadSede}}" name="paisSede" type="text">
						<label for="">Ciudad de sede</label>
						<input required class="form-control m-b-5" value="{{user.paisSede}}" name="ciudadSede" type="text">
					</div>
					<div class="col-md-6">
						<label for="">Email</label>
						<input required class="form-control m-b-5" value="{{user.email}}" name="email" type="email">
						<label for="">Telefono</label>
						<input class="form-control m-b-5" value="{{user.phone}}" name="telefono" type="text">
						<label for="">Roles</label>
						<select class=" m-b-5 form-control" name="role" id="">
							<option {% if user.roles == 'ROLE_USER'%}selected{% endif %} value="ROLE_USER">USER</option>
							<option {% if user.roles == 'ROLE_ADMIN'%}selected{% endif %} value="ROLE_ADMIN">ADMIN</option>
							<option {% if user.roles == 'ROLE_SUPER_ADMIN'%}selected{% endif %} value="ROLE_SUPER_ADMIN">WEBMASTER</option>
						</select>
						<button id="send" class="btn btn-warning center-block">Editar</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

{% endblock %}
{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/js/select2.js" type="text/javascript"></script>
{% endblock %}
